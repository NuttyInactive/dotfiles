# shortcut to the dotfiles path
# (AUTOMATICALLY GENERATED BY ../setup.sh, DO NOT CHANGE MANUALLY)
export DOTFILES=~/dotfiles

# your project folder that we can `c [tab]` to
export PROJECTS=~/Code

# get a list of all of the zsh files
config_files=($DOTFILES/**/*.zsh)

# load the path files
for file in ${(M)config_files:#*/path.zsh}
do
	source $file
done

# load everything but the path and completion files
for file in ${${config_files:#*/path.zsh}:#*/completion.zsh:#*/aliases.zsh}
do
	source $file
done

# initialize autocomplete here, otherwise functions won't be loaded
autoload -U compinit
compinit

# load every completion after autocomplete loads
for file in ${(M)config_files:#*/completion.zsh}
do
	source $file
done

# load aliases last so they don't get overriden
for file in ${(M)config_files:#*/aliases.zsh}
do
	source $file
done

unset config_files
